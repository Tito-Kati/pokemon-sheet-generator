{
    "name": "tito-kati/pokemon-sheet-generator",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Antonio Gonzalez Gea",
            "email": "katarn@katarn.es"
        },
        {
            "name": "Sergio Perez Gea",
            "email": "sergio.perez.gea@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PSG\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "cs:fix": "./vendor/bin/php-cs-fixer fix",
        "cs:run": "./vendor/bin/php-cs-fixer fix -v --allow-risky=yes --dry-run --show-progress=none",
        "test:all": "./vendor/bin/phpunit --testsuite=All",
        "test:unit": "./vendor/bin/phpunit --testsuite=Unit",
        "test:integration": "./vendor/bin/phpunit --testsuite=Integration",
        "test:external": "./vendor/bin/phpunit --testsuite=External"
    }
}
